  -
    const formInputSettingsPass =
      [
        {
          name: "password",
          id: "password",
          type: "password",
          isRequired: true,
          label: "Новый пароль",
        },
        {
          name: "password2",
          id: "password2",
          type: "password",
          isRequired: true,
          label: "Повторите пароль",
        }
      ]

block main
  main.main
    .container.main__header
      a(href="#", target="_blank", rel="nofollow noopener").main__link-back
        +icon("icon-back-arrow", 32, 32)
      h1.main__title.title Мой профиль
    .container.container--account
      section.subscribe-info
        +icon("icon-crown", 40, 40)
        h2.visually-hidden Информация о подписке
        p.subscribe-info__text Клубная карта активна до: #{subDate}
        .subscribe-info__control
          a(href="#", target="_blank", rel="nofollow noopener").subscribe-info__button.btn Продлить доступ
          a(href="#", target="_blank", rel="nofollow noopener").subscribe-info__link-out Выйти из профиля
      +form(formInputSettingsUser, "Настройки профиля")
      +form(formInputSettingsPass, "Смена пароля")

